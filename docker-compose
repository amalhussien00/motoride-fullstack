version: "3.9"

services:
  db:
    image: mysql:8.0
    container_name: motoride-db
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: rootpassword
      MYSQL_DATABASE: motoride
      MYSQL_USER: motorideuser
      MYSQL_PASSWORD: motoridepass
    ports:
      - "3306:3306"
    volumes:
      - db_data:/var/lib/mysql
      - ./database.sql:/docker-entrypoint-initdb.d/database.sql
    networks:
      - motoride-network

  backend:
    build:
      context: ./backend/MotoRide
      dockerfile: Dockerfile
    container_name: motoride-backend
    ports:
      - "5000:5000"
    environment:
      DOTNET_ENVIRONMENT: "Development"
      ConnectionStrings__DefaultConnection: "Server=db;Database=motoride;User=motorideuser;Password=motoridepass;"
    depends_on:
      - db
    networks:
      - motoride-network

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: motoride-frontend
    ports:
      - "8080:80"
    networks:
      - motoride-network

volumes:
  db_data:

networks:
  motoride-network:
    driver: bridge
